extends layout

block attachment
  link(rel="stylesheet" type="text/css" href="stylesheets/DetailPage.css")

block content
  h1 Register System
  form(method="POST" id="Register-box")
    h2 用户详情 
    #input-bar
      div
        span.info-name 用户名:
        input(name="username" value="#{user.username}" disabled)
        
      div
        span.info-name 学号:
        input(name="userid" value="#{user.userid}" disabled)
        
      div
        span.info-name 电话:
        input(name="usertel" value="#{user.usertel}" disabled)
        
      div
        span.info-name 邮箱:
        input(name="useremail" value="#{user.useremail}" disabled)
      
      if error
        #error-bar !{error} 
    a#quit(href='/logout') 退出